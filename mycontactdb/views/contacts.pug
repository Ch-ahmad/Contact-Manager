extends layout

block content
  h1 Contacts
  table
    thead
      tr
        th First Name
        th Last Name
        th Email
        th Actions
    tbody
      each contact in contacts
        tr
          td= contact.firstName
          td= contact.lastName
          td= contact.email
          td
            a(href=`/users/edit-contact/${contact.id}`) Edit
            form(action=`/users/delete-contact/${contact.id}`, method="POST", style="display: inline;")
              button(type="submit") Delete
